{% extends 'base.html.twig' %}
{% block title %}New Task{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-10 ml-md-auto">
                <div class="card bg-light mb-3 mt-5" style="width: 800px">
                    <div class="card-body">
                        <div class="card-header mb-3">New Task</div>
                        {{ form_start(form) }}
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.status, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.user, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        {% if is_granted('ROLE_ADMIN')%}
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                {{ form_row(form.checkbox) }}
                            </div>
                        </div>
                        {% endif %}
                        <div class="form_group">
                            <div class="col-md-12 mb-3">
                                <button class="btn">{{ button_label|default('Save') }}</button>
                                <button class="btn"> <a href="{{ path('task_index') }}">Undo</a></button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
